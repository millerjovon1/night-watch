<div class="container mt-2">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
  </div>
  <h1><%= @list.name.capitalize %></h1>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
      <%= image_tag bookmark.movie.poster_url, alt: "text" %>
      <div class="card-product-infos">
        <h2> <%= bookmark.movie.title %></h2>
        <strong>
          <p>"<%= bookmark.comment %>"</p>
        </strong>
        <%= link_to  bookmark_path(bookmark), class:"btn btn-light", data: { turbo_method: :delete, turbo_confirm: "Delete bookmark for #{bookmark.movie.title}?"} do%>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= link_to 'Create Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>
