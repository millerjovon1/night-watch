<div class="container mt-2" >
  <div class="home-page-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1585951237318-9ea5e175b891?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80);">
    <div>
      <h1 class="text-center">Movies</h1>
      <%= link_to 'Add List', new_list_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div>
    <h2>latest streaming</h2>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="image-container">
        <%=  link_to list_path(list), class:"text-decoration-none", data: { turbo_frame: 'frame-id' } do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : "https://source.unsplash.com/random/?<#{list.name.gsub(" ", " ")}" %>">
            <%= list.name %>
          </div>
        <% end %>
        <%= link_to list_path(list), class: 'text-decoration-none card-remove-link', data: { turbo_frame: 'frame-id', turbo_method: :delete, turbo_confirm: "remove-list #{list.name}?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
